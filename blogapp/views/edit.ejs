<%- include("partials/header") %>

<div class="ui container segment" style="width: 50%; margin-top: 50px;">
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
    <h2>Title</h2>
    <input type="text" name="title" value="<%= blog.title %>">
    <h2>Image</h2>
    <input type="text" name="image" value="<%= blog.image %>"">
    <h2>Content</h2>
    <textarea name="content" cols="30" rows="10"><%= blog.content %></textarea>
    <button class="ui violet basic button" style="margin-top: 10px;">Submit</button>
    </form>
</div>

<%- include("partials/footer") %>

